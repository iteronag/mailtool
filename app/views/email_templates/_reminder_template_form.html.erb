<div class="row-fluid" id="reminder-box" style="padding-top:15px;">
  <%= form_for @reminder_template, url: "/email_templates", html: {class: "form-horizontal reminder_template"} do |f| %>
    <div class="form-group">
      <%= f.label :version, class: "control-label col-sm-2" %>
      <div class="col-sm-9">
          <%= f.text_field :version, readonly: true, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, "Reminder Text", class: "control-label col-sm-2" %>
      <div class="col-sm-9">
        <%= f.text_area :description, class: "wysihtml5"%>
      </div>
    </div>
    <div class="col-md-offset-2">
      <%= f.hidden_field :language %>
      <%= f.hidden_field :group_id %>
      <%= f.submit "Save", :class => 'btn btn-inverse btn-primary' %>
    </div>
  <% end %>
</div>