<h1 class="underline">Listing Email Templates</h1>
<table class="table table-hover">
<thead>

  <tr>
    <th>New Text</th>
    <th>Reminder Text</th>
    <th>Language</th>
    <th>Version</th>
    <th>Group</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>

<% @email_templates.each do |email_template| %>
<%
  path_params = {id: email_template.id, language: email_template.language}
%>
  <tr>
    <td><p><%= short_text_display(email_template.new_text.to_s, show_language_email_templates_path(path_params)) %></p></td>
    <td><p><%= short_text_display(email_template.reminder_text.to_s, show_language_email_templates_path(path_params)) %></p></td>
    <td><p><%= email_template.language.try(:titleize) %></p></td>
    <td><p><%= email_template.version %></p></td>
    <td><p><%= email_template.group.name %></p></td>
    <td><%= link_to 'Show', show_language_email_templates_path(path_params), class: "btn-link" %></td>
    <td><%= link_to 'Edit', edit_language_email_templates_path(path_params), class: "btn-link" %></td>
    <td><%= link_to 'Delete', email_template, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-link" %></td>
  </tr>
<% end %>
</tbody>
  <tfoot>
    <tr>
    <td colspan="8">
      <div id="pagination">
        <%= will_paginate(@email_templates, renderer: BootstrapPagination::Rails)  %>
      </div>
    </td>
    </tr>
  </tfoot>
</table>
<%= link_to 'New Email template', new_language_email_templates_path(@language), class: "btn-link" %>

