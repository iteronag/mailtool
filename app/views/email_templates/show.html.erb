<div class="col-md-12">
<h1 class="underline">Show Email Template</h1>

<dl class="dl-horizontal">
  <dt><strong>New Text</strong></dt>
  <dd><%= @email_template.new_text.html_safe %></dd>
  <dt><strong>Reminder Text</strong></dt>
  <dd><%= @email_template.reminder_text .html_safe %></dd>
  <dt><strong>Language</strong></dt>
  <dd><%= @email_template.language.try(:titleize) %></dd>
  <dt><strong>Version</strong></dt>
  <dd><%= @email_template.version %></dd>
  <dt><strong>Group</strong></dt>
  <dd><%= @email_template.group.name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              language_email_templates_path(@email_template.language), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_language_email_templates_path({id: @email_template.id, language: @email_template.language}), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              email_template_path(@email_template),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

</div>

