
<%= form_for @group, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group required">
    <%= label_tag "Name", nil, class: "control-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>
  </div>

  <div class="form-group required">
    <%= label_tag "Description", nil, class: "control-label col-sm-2" %>
    <div class="col-sm-8">
      <%= f.text_area :description, class: "form-control", placeholder: "Description" , rows: "4"  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <!-- <button class="btn btn-default btn-large" type="reset">Cancel</button> -->
    <%= f.submit 'Save', :class => 'btn btn-inverse btn-primary', disable_with: "Submitting..." %>
  </div>
</div>
<% end %>

